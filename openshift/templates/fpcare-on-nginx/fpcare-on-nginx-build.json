{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "fpcare-on-nginx",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-build",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "runPolicy": "Parallel",
        "completionDeadlineSeconds": 1800,
        "triggers": [
          {
            "type": "ImageChange"
          }
        ],
        "source": {
          "type": "Dockerfile",
          "dockerfile": "FROM nginx-runtime:latest\nCOPY * /tmp/app/dist/\nCMD  /usr/libexec/s2i/run",
          "images": [
            {
              "from": {
                "kind": "ImageStreamTag",
                "name": "fpcare:latest"
              },
              "paths": [
                {
                  "sourcePath": "/opt/app-root/src/dist/.",
                  "destinationDir": "tmp"
                }
              ]
            }
          ]
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "nginx-runtime:latest",
              "namespace": "openshift"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "fpcare-on-nginx:${OUTPUT_IMAGE_TAG}"
          }
        },
        "resources": {
          "requests": {
            "cpu": "100m",
            "memory": "2Gi"
          },
          "limits": {
            "cpu": "1",
            "memory": "4Gi"
          }
        }
      },
      "status": {
        "lastVersion": 0
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the objects defined in this template.",
      "required": true,
      "value": "fpcare"
    },
    {
      "name": "OUTPUT_IMAGE_TAG",
      "displayName": "Output Image Tag",
      "description": "The tag given to the built image.",
      "required": true,
      "value": "latest"
    },
    {
      "name": "GIT_REPO_URL",
      "displayName": "GIT Source Repo URL",
      "description": "A GIT URL to your source code. NOTE: unused, but mandatory for scripts.",
      "required": true,
      "value": "https://github.com/bcgov/moh-fpcare"
    },
    {
      "name": "GIT_REF",
      "displayName": "Git Reference",
      "description": "The git reference or branch.NOTE: unused, but mandatory for scripts.",
      "required": true,
      "value": "master"
    },
    {
      "name": "SOURCE_CONTEXT_DIR",
      "displayName": "Source Context Directory",
      "description": "The source context directory. NOTE: unused, but mandatory for scripts.",
      "required": false,
      "value": ""
    }
  ]
}
